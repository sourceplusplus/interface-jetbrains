<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{5} - %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="debug-console" class="spp.jetbrains.sourcemarker.console.SourceMarkerAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{5} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="spp.jetbrains" level="INFO">
        <appender-ref ref="debug-console"/>
    </logger>
    <logger name="spp.jetbrains" level="DEBUG">
        <appender-ref ref="STDOUT"/>
    </logger>

    <logger name="io.vertx" level="DEBUG">
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="io.netty" level="DEBUG">
        <appender-ref ref="STDOUT"/>
    </logger>
</configuration>