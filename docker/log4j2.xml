<Configuration status="INFO">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout charset="UTF-8" pattern="%d - %c -%-4r [%t] %-5p %x - %m%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <logger name="org.apache.skywalking.oap.server.receiver.trace.provider.handler.v5.grpc" level="INFO"/>
        <logger name="org.apache.skywalking.oap.server.receiver.trace.provider.parser" level="INFO"/>
        <logger name="org.apache.skywalking.oap.server.storage.plugin.elasticsearch.base" level="INFO"/>
        <logger name="org.apache.skywalking.oap.server.core.remote.client" level="INFO"/>
        <logger name="org.apache.skywalking.oap.server.core.cache" level="WARN"/>
        <logger name="org.apache.skywalking.oap.server.receiver.jvm.provider.handler" level="INFO"/>
        <logger name="org.apache.skywalking.oap.server.core.remote.selector" level="INFO"/>
        <logger name="org.apache.skywalking.oap.server.core.analysis.worker" level="INFO"/>
        <logger name="graphql.execution" level="INFO"/>
        <logger name="org.elasticsearch.client" level="INFO"/>
        <logger name="org.apache.skywalking.oap.server.library.buffer" level="INFO"/>
        <logger name="org.apache.skywalking.oap.server.core.storage" level="INFO"/>
        <logger name="org.apache.http" level="INFO"/>
        <logger name="org.eclipse.jetty" level="INFO"/>
        <logger name="org.apache.zookeeper" level="INFO"/>
        <logger name="io.grpc.netty" level="INFO"/>
        <logger name="io.netty.handler.codec.http2" level="INFO"/>
        <Root level="INFO">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
